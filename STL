________________________________________________________________________________
Use of auto keyword for the iterations :

#include<iostream>
#include<vector>
using namespace std;
int main(){
    vector <int> v = {1,2,3,4,5};
    for(auto it = v.begin(); it !=v.end();it++)
    cout << (*it) << " ";
    cout << endl;

    for(int value :v )
    cout << value << " ";
    return 0;

}
